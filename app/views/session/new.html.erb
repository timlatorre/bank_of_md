<div class="forms">

  <div class="title">Login</div>

  <%= form_tag do %>

    <div class='field'>
      <%= label_tag 'email' %>
      <%= text_field_tag 'email' %>
    </div>

    <div class='field'>
      <%= label_tag 'password' %>
      <%= password_field_tag 'password' %>
    </div>

    <div class='field'>
      <%= submit_tag "Login", :class => "secondary button" %>
    </div>

  <% end %>

</div><!-- .forms -->
