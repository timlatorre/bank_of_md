<div class="forms">

  <div class="title">New Account</h1></div>

  <%= form_tag do %>

    <div class='field'>
      <%= label_tag 'Child:' %>
      <%= select("new_account", "child_id", @auth.family.members.where(:is_parent => 'false').collect {|p| [ p.first_name, p.id ] }, {:prompt => 'Select Child' }, :class => 'large button dropdown' ) %>
    </div>

    <div class='field'>
      <%= label_tag 'Name:' %>
      <%= text_field_tag 'new_account[name]' %>
    </div>

    <div class='field'>
      <%= label_tag 'Category:' %>
      <%= select('new_account', 'category', [['Spending','spending'],['Savings','savings'],['Charitable','charitable']]) %>
    </div>

    <div class='field'>
      <%= label_tag 'Starting balance:' %>
      <%= text_field_tag 'new_account[balance]' %>
    </div>

    <div class='field'>
      <%= submit_tag "Create Account", :class => "secondary button" %>
    </div>

  <% end %>

</div><!-- .forms -->